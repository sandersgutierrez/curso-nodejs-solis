        title= "Camiseta " + titulo + " - Sanders Gutiérrez"
        meta(charset="utf-8")
        meta(name="description", content="")
        meta(name="viewport", content="width=device-width user-scalable=no initial-scale=1")
        link(rel="stylesheet", href="/css/styles.css")
    body
        div.contenedor
            header
                div.logo
                    img(src="/img/logotipo_1.png", alt="Logotipo")
                    a(href="/") Sanders Gutiérrez
                nav
                    a(href="/") Inicio
                    a(href="/acercade") Acerca de
                    a(href="/productos") Productos
                    a(href="/blog") Blog
                    a(href="/contacto") Contacto
            section.principal
                article
                    h2.titulo= "Gracias por comprar la Camiseta " + titulo
                    img(src="/img/" + imagen, width="250")
                    p= descripcion
                    a(href="/productos").comprar  Regresar
            aside
                div.widget
                    div.image
                div.widget
                    div.image
            footer
                section.links
                    a(href="/") Inicio
                    a(href="/acercade") Acerca de
                    a(href="/productos") Productos
                    a(href="/blog") Blog
                    a(href="/contacto") Contacto
                div.social
                    a(href="/", ) GP
